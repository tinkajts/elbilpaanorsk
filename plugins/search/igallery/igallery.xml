<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="search" method="upgrade">
    <name>Search - Ignite Gallery</name>
    <author>Matthew Thomson</author>
    <creationDate>August 2013</creationDate>
    <copyright>(C) 2013 Matthew Thomson. All rights reserved.</copyright>
    <license>GPL v2</license>
    <authorUrl>www.ignitegallery.com</authorUrl>
    <version>3.5</version>
    <description>Enables the searching of images and galleries in Joomla search results.</description>

    <files>
        <filename plugin="igallery">igallery.php</filename>
    </files>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="search_limit" type="text" default="50" label="Search Limit" size="5" />
            </fieldset>
        </fields>
    </config>

</extension>